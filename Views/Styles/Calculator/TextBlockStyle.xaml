<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="RightTextBlock" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource Foreground}" />
        <Setter Property="Margin" Value="5,20,25,0" />
        <Setter Property="Height" Value="50" />
        <Setter Property="FontSize" Value="18" />
    </Style>
    <Style x:Key="CenterTextBlock" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource Foreground}" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="Padding" Value="0,8,0,0" />
        <Setter Property="Height" Value="46" />
        <Setter Property="FontSize" Value="18" />
    </Style>
    <Style x:Key="HeadingTextBlock" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource Foreground}" />
        <Setter Property="TextAlignment" Value="Center" />
        <Setter Property="FontSize" Value="24" />
    </Style>
    <Style x:Key="ExpanderTextBlock" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource Foreground}" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Padding" Value="10" />
    </Style>
</ResourceDictionary>